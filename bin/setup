#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  puts "== Installing dependencies =="
  system "gem install bundler foreman --conservative"
  system "bundle check || bundle install"

  puts "\n== Preparing database =="
  system "bin/rake db:drop"
  system "bin/rake db:setup"

  puts "\n== Configuring environment =="
  unless Pathname.new(".env").exist?
    print "\n    Riot Games API Key: "
    api_key = gets.chomp
    File.open(".env", "w") do |f|
      f.write("RIOT_API_KEY=#{api_key}\n")
      f.write("RIOT_REQUESTS_PER_10_SECONDS=9\n")
      f.write("RIOT_REQUESTS_PER_10_MINUTES=450\n")
    end
  end

  puts "\n== Fetching and analyzing initial seed data (this may take a while) =="
  system "bin/rake champions:pull"
  system "bin/rake summoners:seed"

  puts "\n== Finished! Run `foreman start` and visit http://localhost:5000 =="
end
